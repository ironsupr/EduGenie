// Firestore Security Rules for EduGenie
// Deploy with: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User authentication data - allow server access for development
    match /user_auth/{authId} {
      allow read, write: if true; // Allow for service account access
    }
    
    // User sessions - allow server access for development
    match /user_sessions/{sessionId} {
      allow read, write: if true; // Allow for service account access
    }
    
    // Courses - public read, admin write
    match /courses/{courseId} {
      allow read: if true; // Public courses
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User progress - users can only access their own
    match /progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Assessments - public read for questions, restricted write
    match /assessments/{assessmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'instructor'];
    }
  }
}
