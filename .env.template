# EduGenie Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Google AI SDK
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Google OAuth (for login)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# GitHub OAuth (for login)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Settings
OAUTH_REDIRECT_URI=http://127.0.0.1:8000/auth/callback
SECRET_KEY=your_secret_key_for_jwt_tokens_generate_a_long_random_string

# Application Settings
PROJECT_ID=edugenie
DEBUG=false
VERSION=1.0.0

# Database (if using external database)
DATABASE_URL=sqlite:///./edugenie.db

# Google Cloud (if using Firestore)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
FIRESTORE_SERVICE_ACCOUNT_PATH=path/to/service-account.json
FIREBASE_ADMIN_SDK_CONFIG_PATH=path/to/your-firebase-admin-sdk-service-account.json # Can be same as FIRESTORE_SERVICE_ACCOUNT_PATH

# Firebase Frontend Configuration (for client-side JS - get these from your Firebase project settings)
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=YOUR_FIREBASE_AUTH_DOMAIN
FIREBASE_PROJECT_ID_FRONTEND=YOUR_FIREBASE_PROJECT_ID
FIREBASE_STORAGE_BUCKET=YOUR_FIREBASE_STORAGE_BUCKET
FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID
FIREBASE_MEASUREMENT_ID=YOUR_FIREBASE_MEASUREMENT_ID (Optional)
