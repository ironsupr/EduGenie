# Application Settings
PROJECT_ID=edugenie
VERSION=1.0.0
DEBUG=False

# Learning Settings
MIN_PASS_SCORE=0.7
MAX_QUIZ_ATTEMPTS=3
QUIZ_TIME_LIMIT=1800

# Service Settings
ENABLE_NOTIFICATIONS=True
ENABLE_AI_FEATURES=True

# Security
CORS_ORIGINS=["*"]
API_KEY_HEADER=X-API-Key
API_KEY=your-secret-key-here

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
FIRESTORE_SERVICE_ACCOUNT_PATH=./firestore-service-account.json
FIREBASE_ADMIN_SDK_CONFIG_PATH=./firestore-service-account.json # Or path to a separate Firebase Admin SDK config

# Firebase Frontend Configuration (for client-side JS)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID_FRONTEND=your_firebase_project_id # Often same as GOOGLE_CLOUD_PROJECT_ID but can differ
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id # Optional

# AI Services
OPENAI_API_KEY=your-openai-api-key-here

# Database Settings
DATABASE_URL=your-database-url
DATABASE_NAME=edugenie

# Monitoring
HEALTH_CHECK_INTERVAL=300
LOG_LEVEL=INFO

# Time Settings
TIMEZONE=UTC

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_REALTIME_FEEDBACK=True
